@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers

@model MyBlog.Models.Event

@{
    ViewBag.Title = "Edit Event";
}

<form asp-controller="Events" asp-action="Update" asp-route-id="@Model.Id" method="post">
    <div class="form-group">
        <label class="control-label" asp-for="Name">Name</label>
        <input type="text" asp-for="Name" class="form-control"  />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="control-label" asp-for="Location">Location</label>
        <input type="text" asp-for="Location" class="form-control" />
        <span asp-validation-for="Location" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="control-label" asp-for="ImgUrl">Img Url</label>
        <input type="text" asp-for="ImgUrl" class="form-control" />
        <span asp-validation-for="ImgUrl" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="control-label" asp-for="Date">Date</label>
        <input type="text" asp-for="Date" class="form-control" />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="control-label" asp-for="OrganizedBy">Organized By</label>
        <input type="text" asp-for="OrganizedBy" class="form-control" />
        <span asp-validation-for="OrganizedBy" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="control-label" asp-for="Description">Description </label>
        <textarea type="text" asp-for="Description" class="form-control" cols="20" rows="5"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Update Event" class="btn btn-warning" />
    </div>
</form>
